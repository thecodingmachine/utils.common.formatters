<?xml version="1.0" encoding="UTF-8"?>
<package>
	<displayName>Formatters</displayName>
	<shortDescription>Formatters are simple classes that transform a string into another.
	For instance, a formatter could be used to format a date, translate a string, put a string in bold, etc...
	This package contains the formatter interface, plus a number of useful formatters.</shortDescription>
	<docUrl></docUrl>
	<logo>database.png</logo>
	<requires>
		<require>FormatterInterface.php</require>
		<require>BijectiveFormatterInterface.php</require>
		<require>DateFormatter.php</require>
		<require>TranslationFormatter.php</require>
		<require>NullTransformationFormatter.php</require>
		<require>NotNullTransformationFormatter.php</require>
		<require>AndFormatter.php</require>
		<require>ReadOnlyCheckboxFormatter.php</require>
		<require>MoufNumberFormatter.php</require>
		<require>CurrencyFormatter.php</require>
		<require>PrefixSuffixFormatter.php</require>
		<require>SwitchFormatter.php</require>
	</requires>
	<externalComponentRequires>
		<require>FormatterExternalComponent.php</require>
	</externalComponentRequires>
</package>